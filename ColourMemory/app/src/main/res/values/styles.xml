<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@color/gray_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/btn_green_selector</item>
    </style>

    <style name="Card" parent="android:Widget.Button.Toggle">
        <item name="android:radius">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="CustomDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>



</resources>
